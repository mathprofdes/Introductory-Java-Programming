import java.awt.*;
import javax.swing.*;

/*-
 * IntroGUI006
 * Draws some geometric objects on the frame.
 * Author:  Don Spickler
 * Date: 7/6/2016
 */

public class IntroGUI006 extends JFrame {

	private static IntroGUI006 prog;
	private GraphicsJPanel canvas;

	public static void main(String[] args) {
		prog = new IntroGUI006(args);
		prog.setTitle("GUI");

		prog.setBounds(20, 20, 700, 500);
		prog.setVisible(true);
		prog.toFront();
	}

	public IntroGUI006(String[] args) {
		canvas = new GraphicsJPanel();

		getContentPane().setLayout(new BorderLayout());
		getContentPane().add(canvas, BorderLayout.CENTER);
	}
}